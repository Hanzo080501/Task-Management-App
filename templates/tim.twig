{% extends "layout.twig" %}

{% block title %}Our Team{% endblock %}
{% block header %}Our Team{% endblock %}

{% block content %}
<style>
.team-container {
    max-width: 1100px;
    margin: 2.5rem auto 0 auto;
    padding: 0 1rem;
}
.team-title {
    text-align: center;
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 2.5rem;
    color: #22223b;
}
.team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
    justify-items: center;
}
.team-card {
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 2px 16px rgba(44,62,80,0.10);
    padding: 2.2rem 1.5rem 1.5rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 320px;
    height: 320px;
    min-width: 320px;
    min-height: 320px;
    max-width: 320px;
    max-height: 320px;
    box-sizing: border-box;
    transition: box-shadow 0.2s;
}
.team-card:hover {
    box-shadow: 0 4px 24px rgba(44,62,80,0.16);
}
.team-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1.2rem;
    box-shadow: 0 2px 8px rgba(44,62,80,0.13);
    border: 4px solid #f1f5f9;
}
.team-name {
    font-size: 1.18rem;
    font-weight: 600;
    color: #22223b;
    margin-bottom: 0.3rem;
    text-align: center;
}
.team-role {
    font-size: 1.01rem;
    color: #64748b;
    text-align: center;
}
@media (max-width: 700px) {
    .team-title { font-size: 1.4rem; }
    .team-card {
        padding: 1.2rem 0.5rem;
        width: 90vw;
        min-width: unset;
        max-width: unset;
        height: 220px;
        min-height: 220px;
        max-height: 220px;
    }
    .team-avatar { width: 70px; height: 70px; }
}
</style>
<div class="team-container">
    <div class="team-title">Our Team</div>
    <div class="team-grid">
        <div class="team-card">
            <img class="team-avatar" src="https://api.dicebear.com/7.x/adventurer/svg?seed=Yohanis" alt="Yohanis Sugiyanto Zogara">
            <div class="team-name">Yohanis Sugiyanto Zogara</div>
            <div class="team-role">Project Leader &amp; Front-End Developer</div>
        </div>
        <div class="team-card">
            <img class="team-avatar" src="https://api.dicebear.com/7.x/adventurer/svg?seed=Arya" alt="Arya Agus Wicaksana">
            <div class="team-name">Arya Agus Wicaksana</div>
            <div class="team-role">Back-End Developer</div>
        </div>
        <div class="team-card">
            <img class="team-avatar" src="https://api.dicebear.com/7.x/adventurer/svg?seed=Genoveva" alt="Genoveva Seniyati Moruk">
            <div class="team-name">Genoveva Seniyati Moruk</div>
            <div class="team-role">Back-End Developer</div>
        </div>
        <div class="team-card">
            <img class="team-avatar" src="https://api.dicebear.com/7.x/adventurer/svg?seed=Andhita" alt="Andhita Firman Syah Putra">
            <div class="team-name">Andhita Firman Syah Putra</div>
            <div class="team-role">Back-End Developer</div>
        </div>
        <div class="team-card">
            <img class="team-avatar" src="https://api.dicebear.com/7.x/adventurer/svg?seed=Yusril" alt="Yusril Zaidan Malih">
            <div class="team-name">Yusril Zaidan Malih</div>
            <div class="team-role">UI/UX Designer</div>
        </div>
    </div>
</div>
{% endblock %} 